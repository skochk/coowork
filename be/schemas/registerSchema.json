{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "required": [
      "login",
      "password",
      "email"
    ],
    "properties": {
      "login": {
        "type": "string",
        "minLength": 6,
        "maxLength": 22,
        "pattern": "^[A-Za-z_][A-Za-z0-9_]*$"
      },
      "password": {
        "type": "string",
        "minLength": 6,
        "maxLength": 22,
        "pattern": "^[A-Za-z_][A-Za-z0-9_]*$"
      },
      "email": {
        "format": "email"
      }
    }
  }